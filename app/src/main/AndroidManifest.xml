            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity android:name=".MailContent" />
        <activity android:name=".UserLogin"></activity>
        <activity android:name=".MainActivity" />
        <activity android:name=".InboxContent" />
        <activity android:name=".SentContent" />
        <activity android:name=".DraftContent" />
        <activity android:name=".SendMail" />
        <activity android:name=".MailInfo" />
    </application>

